@model TranslationApplication.Models.Word

<h5 class="card-title title">Edit word</h5>
<div class="row">
    <div class="col-md-12 col-lg-12">
        <form asp-controller="Word" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WordId" />

            <div class="form-group w-100">
                <label asp-for="Word1" class="control-label">@Model.Language1</label>
                <input asp-for="Word1" class="form-control" />
                <span asp-validation-for="Word1" class="text-danger"></span>
            </div>
            <div class="form-group w-100">
                <label asp-for="Word2" class="control-label">@Model.Language2</label>
                <input asp-for="Word2" class="form-control" />
                <span asp-validation-for="Word2" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
