@model List<TranslationApplication.Models.Wordlist>
<h1>My wordlists</h1>
@if (Model.Count == 0)
{
<p>You have no wordlists saved</p> }
            else
            {
@foreach (var wordlist in Model)
{
<a asp-controller="Wordlist" asp-action="CompleteWordlist" asp-route-id="@wordlist.Id" class="btn my-button btn-lg btn-success">
    <p>@wordlist.Title</p>
    <p>@wordlist.LanguagePair.Language1 to @wordlist.LanguagePair.Language2</p>
</a> @*<a asp-controller="Wordlist" asp-action="AddWordToList" asp-route-id="@wordlist.Id" class="btn my-button btn-lg btn-success float-right ">
                            Add new word
                        </a>*@
                    <hr />}}
