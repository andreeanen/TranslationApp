@model TranslationApplication.Models.Wordlist


<h1>Create new wordlist</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Wordlist" asp-action="CreateWordlist" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Language1" class="control-label"></label>
                <input asp-for="@Model.Language1" class="form-control" />
                <span asp-validation-for="@Model.Language1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Language2" class="control-label"></label>
                <input asp-for="@Model.Language2" class="form-control" />
                <span asp-validation-for="@Model.Language2" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>
