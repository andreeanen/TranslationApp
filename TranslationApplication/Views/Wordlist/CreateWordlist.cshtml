@model TranslationApplication.Models.Wordlist


<h5 class="card-title title">Create new wordlist</h5>
<div class="row">
    <div class="col-md-12 col-lg-12">
        <form asp-controller="Wordlist" asp-action="CreateWordlist" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LanguagePair.Language1" class="control-label"></label>
                <input asp-for="@Model.LanguagePair.Language1" class="form-control" />
                <span asp-validation-for="@Model.LanguagePair.Language1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LanguagePair.Language2" class="control-label"></label>
                <input asp-for="@Model.LanguagePair.Language2" class="form-control" />
                <span asp-validation-for="@Model.LanguagePair.Language2" class="text-danger"></span>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
