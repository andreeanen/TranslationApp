@model TranslationApplication.Models.Word
<h5 class="card-title title">New word</h5>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <form asp-controller="Wordlist" asp-action="AddWordToList" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WordlistId" />
            <div class="form-group w-100">
                <label asp-for="Word1" class="control-label">@Model.Language1</label>
                <input asp-for="Word1" class="form-control" />
                <span asp-validation-for="Word1" class="text-danger"></span>
            </div>
            <div class="form-group w-100">
                <label asp-for="Word2" class="control-label">@Model.Language2</label>
                <input asp-for="Word2" class="form-control" />
                <span asp-validation-for="Word2" class="text-danger"></span>
            </div>
            <div class="text-right">
                <input type="submit" value="Save" class="btn btn-success">
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
